<style>
  .h1-receita {
    font-size: clamp(3rem, 4vw, 4rem);
    line-height: 150%;

  }

  .img-receita {
    max-width: 100%;
    border-radius: 10%;
  }

  .table-container {
    margin: auto;
    min-width: 800px;
    border-collapse: collapse;
    background-color: white;
    border: 1px solid black;

  }

 /* Container da tabela com rolagem */
.table-scroll {
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
  width: 100%;
  scrollbar-width: thin; /* Para Firefox */
  scrollbar-color: transparent transparent; /* Para Firefox */
  margin-bottom: 20px; /* Para evitar que o footer fique colado ao fim */
}

/* Esconde a barra de rolagem */
.table-scroll::-webkit-scrollbar {
  height: 0;
  width: 0;
}

/* Linha do footer */
.table-footer {
  background-color: #f8d7da;
  font-weight: normal;
}

.table-footer .row {
  display: flex;
  justify-content: center;
  align-items: center;
}

.table-footer .col {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* Caso você queira que a barra de rolagem apareça ao interagir */
.table-scroll:hover::-webkit-scrollbar {
  width: 8px;
}

.table-scroll:hover::-webkit-scrollbar-thumb {
  background: #888;
}

  

  .table-row {
    display: flex;
    border-bottom: 1px solid black;

  }

  .table-header {
    font-weight: normal;
    border-bottom: 1px solid black;

  }

  .table-footer {
    background-color: #f8d7da;
    font-weight: normal;

  }

  .col-nut {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;

  }

  .col-nut p {
    font-family: 'Archivo', sans-serif;
    font-weight: 400;
    margin: 7px 0 7px 0;
    padding: 0;
  }

  .table-header p {
    font-family: 'Archivo Black', sans-serif;
    font-style: normal;

    margin: 7px 0 7px 0;
    padding: 0;

  }

  .col-ing {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .text p {
    font-family: 'Archivo', sans-serif;
    font-style: normal;
  }
</style>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-12 ">
      <h1 class="h1-receita"><%= receita.nome %></h1>
    </div>

    <div class="col-md-3 mb-1 ">
      <img src="/public/img/receitas/<%= receita.id %>.jpeg" class="img-receita" alt="<%= receita.nome %>">
    </div>
    
    <div class="col-md-9 text">
      <p><%= receita.descricao %></p>
    </div>

    <div class="table-scroll">
      <div class="container my-4 table-container">
        <div class="row table-header py-2 justify-content-center align-items-center">
          <div class="col col-ing">
            <p>Ingrediente</p>
          </div>
          <div class="col col-nut">
            <p>Gramas</p>
          </div>
          <div class="col col-nut">
            <p>Carboidratos</p>
          </div>
          <div class="col col-nut">
            <p>Proteínas</p>
          </div>
          <div class="col col-nut">
            <p>Gorduras</p>
          </div>
          <div class="col col-nut">
            <p>Fibra</p>
          </div>
          <div class="col col-nut">
            <p>Calorias</p>
          </div>
        </div>

        <% receita.ingredientes.forEach(function(ingrediente) { %>
          <div class="row table-row py-2 justify-content-center align-items-center">
            <div class="col col-ing">
              <p><%= ingrediente.nome %></p>
            </div>
            <div class="col col-nut">
              <p><%= ingrediente.gramas %></p>
            </div>
            <div class="col col-nut">
              <p><%= (ingrediente.carboidratos * ingrediente.gramas / 100).toFixed(2) %></p> <!-- Cálculo de carboidratos -->
            </div>
            <div class="col col-nut">
              <p><%= (ingrediente.proteinas * ingrediente.gramas / 100).toFixed(2) %></p> <!-- Cálculo de proteínas -->
            </div>
            <div class="col col-nut">
              <p><%= (ingrediente.gorduras * ingrediente.gramas / 100).toFixed(2) %></p> <!-- Cálculo de gorduras -->
            </div>
            <div class="col col-nut">
              <p><%= (ingrediente.fibra * ingrediente.gramas / 100).toFixed(2) %></p> <!-- Cálculo de fibra -->
            </div>
            <div class="col col-nut">
              <p><%= (ingrediente.calorias * ingrediente.gramas / 100).toFixed(2) %></p> <!-- Cálculo de calorias -->
            </div>
          </div>
        <% }); %>
        

      </div>

      <div class="container text-center">
        <div class="row py-1 mt-1">
          <div class="col-2">
            Totals
          </div>
          <div class="col-10">
            <div class="container table-footer">
              <div class="row">
                <div class="col col-nut">
                  <p><%= receita.totalGramas %></p>
                </div>
                <div class="col col-nut">
                  <p><%= receita.totalCarboidratos %></p>
                </div>
                <div class="col col-nut">
                  <p><%= receita.totalProteinas %></p>
                </div>
                <div class="col col-nut">
                  <p><%= receita.totalGorduras %></p>
                </div>
                <div class="col col-nut">
                  <p><%= receita.totalFibra %></p>
                </div>
                <div class="col col-nut">
                  <p><%= receita.totalCalorias %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  // Função para calcular os totais
  function calcularTotais() {
    // Crie variáveis para armazenar os totais
    let totalGramas = 0;
    let totalCarboidratos = 0;
    let totalProteinas = 0;
    let totalGorduras = 0;
    let totalFibra = 0;
    let totalCalorias = 0;
  
    // Selecione todas as linhas da tabela, exceto a de cabeçalho e rodapé
    const rows = document.querySelectorAll('.table-row');
  
    // Iterar pelas linhas e somar os valores
    rows.forEach(row => {
      const cols = row.querySelectorAll('.col-nut');
      
      // Converte os valores para números de ponto flutuante, com verificação para valores ausentes
      const gramas = parseFloat(cols[0].textContent) || 0;
      const carboidratos = parseFloat(cols[1].textContent) || 0;
      const proteinas = parseFloat(cols[2].textContent) || 0;
      const gorduras = parseFloat(cols[3].textContent) || 0;
      const fibra = parseFloat(cols[4].textContent) || 0;
      const calorias = parseFloat(cols[5].textContent) || 0;
      
      // Somar os valores para os totais, considerando a quantidade de gramas
      totalGramas += gramas;
      totalCarboidratos += (carboidratos * gramas) / 100;  // Calcula o carboidrato baseado em gramas
      totalProteinas += (proteinas * gramas) / 100;  // Calcula a proteína baseado em gramas
      totalGorduras += (gorduras * gramas) / 100;  // Calcula a gordura baseada em gramas
      totalFibra += (fibra * gramas) / 100;  // Calcula a fibra baseada em gramas
      totalCalorias += (calorias * gramas) / 100;  // Calcula as calorias baseadas em gramas
    });
  
    // Atualizar os totais na linha de rodapé
    document.querySelector('.table-footer .row .col-nut:nth-child(1) p').textContent = totalGramas.toFixed(2) + 'g';
    document.querySelector('.table-footer .row .col-nut:nth-child(2) p').textContent = totalCarboidratos.toFixed(2) + 'g';
    document.querySelector('.table-footer .row .col-nut:nth-child(3) p').textContent = totalProteinas.toFixed(2) + 'g';
    document.querySelector('.table-footer .row .col-nut:nth-child(4) p').textContent = totalGorduras.toFixed(2) + 'g';
    document.querySelector('.table-footer .row .col-nut:nth-child(5) p').textContent = totalFibra.toFixed(2) + 'g';
    document.querySelector('.table-footer .row .col-nut:nth-child(6) p').textContent = totalCalorias.toFixed(2) + 'kcal';
  }
  
  // Chame a função para calcular os totais assim que a página for carregada
  window.onload = function() {
    calcularTotais();
  };
  </script>
  