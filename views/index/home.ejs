<style>
    .fit-cover {
        object-fit: cover;
        width: 100%;
        height: 100%;


    }

    @media (min-width: 768px) {
        .fit-cover {
            position: absolute;
        }
    }

    .card {
        border-color: #000;
        border-width: 2px;
        box-shadow: 4px 4px 0px #000;
        transition: box-shadow ease-in-out 0.3s;
        position: relative;
    }

    .card:hover {
        box-shadow: 0px 0px 0px #000;
    }

    .card img {
        width: 100%;
        height: auto;
    }

    .likes {
        font-size: 16px;
        color: #ff4d4f;
        margin-top: 10px;
        display: flex;
        align-items: center;
    }

    .like-icon {
        font-size: 20px;
        margin-right: 5px;
    }

    .button-container {
        text-align: center;
        margin-top: 20px;
    }

    /* Botões de Low Carb, Mid Carb, High Carb */
    .btn-low-carb {
        background-color: #00FF80;
        color: #000;
        padding: 8px 16px;
        font-weight: bold;
        border-radius: 8px;
        border: 2px solid #000;
    }

    .btn-mid-carb {
        background-color: #FFFF00;
        color: #000;
        padding: 8px 16px;
        font-weight: bold;
        border-radius: 8px;
        border: 2px solid #000;
    }

    .btn-high-carb {
        background-color: #FF0000;
        color: #000;
        padding: 8px 16px;
        font-weight: bold;
        border-radius: 8px;
        border: 2px solid #000;
    }

    .badge {
        position: absolute;
        top: -10px;
        right: 10px;
    }
</style>


